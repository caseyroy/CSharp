@model LogReg.Models.User;


<form asp-action="Register" asp-controller="Home" method="post">
    <div class="formGroupRow">
        <span class="col-sm-12 text-danger" asp-validation-for="FirstName"></span>
        <label asp-for="FirstName" class="col-sm-4"></label>
        <input asp-for="FirstName" class="col-sm-8 form-control" type="text">
    </div>
    <div class="formGroupRow">
        <span class="col-sm-12 text-danger" asp-validation-for="LastName"></span>
        <label asp-for="LastName" class="col-sm-4"></label>
        <input asp-for="LastName" class="col-sm-8 form-control" type="text">
    </div>
    <div class="formGroupRow">
        <span class="col-sm-12 text-danger" asp-validation-for="Email"></span>
        <label asp-for="Email" class="col-sm-4"></label>
        <input asp-for="Email" class="col-sm-8 form-control" type="text">
    </div>
    <div class="formGroupRow">
        <span class="col-sm-12 text-danger" asp-validation-for="Password"></span>
        <label asp-for="Password" class="col-sm-4"></label>
        <input asp-for="Password" class="col-sm-8 form-control" type="text">
    </div>
    <div class="formGroupRow">
        <span class="col-sm-12 text-danger" asp-validation-for="ConfirmPassword"></span>
        <label asp-for="ConfirmPassword" class="col-sm-4"></label>
        <input asp-for="ConfirmPassword" class="col-sm-8 form-control" type="text">
    </div>
    <div class="formGroupRow">
        <input type="submit" value="Register" class="col-sm-4 offset-sm-4 btn btn-primary">
    </div>
</form>