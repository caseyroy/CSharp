<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h2>Here are some delicious Foods!</h2>
    @{
        string[] foodlist = {"Apple Pie", "Burritos", "Clams Casino", "Donuts"};
        foreach (string food in foodlist)
        {
            if(food[0]  == 'C')
            {
                <p style="color: red;">@food</p>
            }
            else
            {
                <p>@food</p>
            }
        }

    }
</body>
</html>