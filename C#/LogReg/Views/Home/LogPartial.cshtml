@model LogReg.Models.LoggedUser

<form asp-action="Login" asp-controller="Home" method="post">
    <div class="form-group row">
        <span class="col.sm-8 offset-sm-4 text-danger" asp-validation-for="LoggedEmail"></span>
        <label asp-for="LoggedEmail" class="col-sm-4"></label>
        <input asp.for="LoggedEmail" class="col-sm-8 form-control">
    </div>
    <div class="form-group row">
        <span class="col.sm-8 offset-sm-4 text-danger" asp-validation-for="LoggedPass"></span>
        <label asp-for="LoggedPass" class="col-sm-4"></label>
        <input asp.for="LoggedPass" class="col-sm-8 form-control">
    </div>
    <div class="form-group row">
        <input type="submit" value="Login" class="col-sm-4 offset-sm-4 btn btn-primary">
    </div>

</form>